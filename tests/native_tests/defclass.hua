(require-macro hua.core.initialize)
(--hua-initialize--)

(hua-import luaunit)

(def assert-equal luaunit.assertEquals)

(setv test-defclass-attrs
      (fn []
        (defclass A []
          [[--init (fn [self] self)]
           [x 42]])
        (assert-equal A.x 42)
        (assert-equal (get (A) "x") 42)))

(setv test-defclass-attrs-fn
      (fn []
        (defclass B []
          [[--init (fn [self] self)]
           [x 42]
           [y (fn [self value]
                (+ self.x value))]])
        (assert-equal B.x 42)
        (assert-equal (.y (B) 5) 47)
        (let [[b (B)]]
          (setv B.x 0)
          (assert-equal (.y B 1) 1))))

(os.exit (luaunit.LuaUnit.run))
